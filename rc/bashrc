##################################################
### Start Emacs servers

## Start the both the termserver and guiserver
## Use 'emacservers --killall' to kill them all

printf "\n\t${YELLOW}[emacsservers...]${CLEAR}\n"

emacsservers --startall

printf "\t${YELLOW}[...emacsservers]${CLEAR}\n"
####################################################




######################################################
### USER's Configuration Alias Shortcuts

alias ed.bash_profile='sudo emacs -Q ~/.bash_profile'
alias ed.bashrc='sudo emacs -Q ~/.bashrc'
alias ed.profile='sudo emacs -Q ~/.profile'
alias ect='emacsclient -qs termserver'
